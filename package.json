{
  "name": "@goatformat/ftk",
  "repository": "github:goatformat/ftk",
  "license": "MIT",
  "devDependencies": {
    "@pkmn/eslint-config": "^1.9.0",
    "@types/node": "^16.11.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint": "^8.0.1",
    "typescript": "^4.4.4"
  },
  "optionalDependencies": {
    "@parcel/config-default": "^2.0.0",
    "@parcel/resolver-glob": "^2.0.0",
    "@types/workerpool": "^6.1.0",
    "parcel": "2.0.0",
    "progress": "^2.0.3",
    "source-map-support": "^0.5.20",
    "tippy.js": "^6.3.2",
    "trakr": "^0.2.0",
    "workerpool": "^6.1.5"
  },
  "scripts": {
    "compile": "tsc -p .",
    "lint": "eslint --cache src tools --ext ts,js",
    "fix": "eslint --fix src tools --ext ts,js",
    "prepare": "npm run compile",
    "start": "parcel html/index.html",
    "build": "parcel build html/index.html",
    "prebenchmark": "npm run compile",
    "benchmark": "node tools/benchmark",
    "presolve": "npm run compile",
    "solve": "node tools/solve",
    "preconverge": "npm run compile",
    "converge": "node tools/converge",
    "test": "npm run compile && npm run lint"
  },
  "eslintConfig": {
    "extends": "@pkmn",
    "rules": {
      "max-len": "off"
    }
  }
}
