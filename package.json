{
  "name": "@goatformat/ftk",
  "repository": "github:goatformat/ftk",
  "license": "MIT",
  "dependencies": {
    "@pkmn/eslint-config": "^1.7.0",
    "@types/node": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "parcel": "2.0.0-nightly.841",
    "piscina": "^3.1.0",
    "progress": "^2.0.3",
    "source-map-support": "^0.5.20",
    "tippy.js": "^6.3.1",
    "trakr": "^0.2.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "compile": "tsc -p .",
    "fix": "eslint --fix *.ts html/*.ts",
    "lint": "eslint --cache *.ts html/*.ts",
    "prepare": "npm run compile",
    "prestart": "npm run compile",
    "start": "parcel html/index.html",
    "build": "parcel build html/index.html",
    "test": "npm run compile && npm run fix"
  },
  "eslintConfig": {
    "extends": "@pkmn",
    "rules": {
      "max-len": "off"
    }
  }
}
